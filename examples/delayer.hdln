comp DELAY ($T : integer) {
  in {
    in;
  }
  out {
    out;
  }
  trigger {
    clk;
  }
  impl {
    #if T == 0 {
      out = in;
    }
    #elif T == 1 {
      sync(clk) store  = in;
      out = ^store;
    }
    #else {
      sync(clk) store : [$T] = ^store[$(T-2):0] ~ [in];  //explicit type declaration because it can't be infered from context
      out = ^store[$(T-1)];
    }
  }
}
